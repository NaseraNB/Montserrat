<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".models.models.Rutes">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/blueBackground"
            android:layout_width="0dp"
            android:layout_height="83dp"
            android:background="#5F574F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iniciImatge"
            android:layout_width="33dp"
            android:layout_height="34dp"
            app:layout_constraintBottom_toBottomOf="@id/blueBackground"
            app:layout_constraintEnd_toEndOf="@id/blueBackground"
            app:layout_constraintHorizontal_bias="0.945"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.571"
            app:srcCompat="@drawable/menulogo" />

        <TextView
            android:id="@+id/iniciTitol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/iniciTitol"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/blueBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.109"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <View
            android:id="@+id/avis"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="#555555"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/blueBackground" />

        <TextView
            android:id="@+id/iniciAvis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/avis_prova"
            android:drawablePadding="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="55dp"
            android:text="@string/iniciAvis"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/avis"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.107"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/avis" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/newSquare"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/gris"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/avis">

            <ImageView
                android:id="@+id/iniciIcon"
                android:layout_width="81dp"
                android:layout_height="82dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.483"
                app:srcCompat="@drawable/baseline_warning_amber_24" />

            <TextView
                android:id="@+id/iniciTipus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:text="@string/iniciTipus"
                android:textColor="#5F574F"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/iniciIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/iniciTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/iniciTemp"
                android:textColor="#5F574F"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.117"
                app:layout_constraintStart_toEndOf="@id/iniciIcon"
                app:layout_constraintTop_toBottomOf="@id/iniciTipus" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="20dp"
                android:text="@string/iniciAvui"
                android:textColor="#5F574F"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.895"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iniciTemp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/iniciReserves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/iniciReserves"
            android:textColor="#5F574F"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.112"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/newSquare" />

        <View
            android:id="@+id/lineBelowReserves"
            android:layout_width="346dp"
            android:layout_height="3dp"
            android:layout_marginTop="3dp"
            android:background="#5F574F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iniciReserves" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/gris"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.439"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lineBelowReserves">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/reservaImatge"
                android:layout_width="262dp"
                android:layout_height="136dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:tint="#80000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/circular"
                app:srcCompat="@drawable/imagen_uno" />

            <TextView
                android:id="@+id/iniciReserveTitol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="@string/iniciReserveTitol"
                android:textColor="#5F574F"
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/iniciReservaData"
                app:layout_constraintHorizontal_bias="0.645"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reservaImatge" />

            <TextView
                android:id="@+id/iniciReservaData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"
                android:text="@string/iniciReservaData"
                android:textColor="#5F574F"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reservaImatge" />

            <View
                android:id="@+id/lineados"
                android:layout_width="272dp"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="#5F574F"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.563"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iniciReserveTitol" />

            <TextView
                android:id="@+id/iniciReserveDescripcio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="25dp"
                android:text="@string/iniciReserveDescripcio"
                android:textColor="#5F574F"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.119"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lineados"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/iniciNovetats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/iniciNovetats"
            android:textColor="#5F574F"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.124"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintLayout2" />

        <View
            android:id="@+id/lineaTres"
            android:layout_width="346dp"
            android:layout_height="3dp"
            android:layout_marginTop="4dp"
            android:background="#5F574F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iniciNovetats" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/novetatImatge"
            android:layout_width="347dp"
            android:layout_height="138dp"
            android:layout_marginTop="16dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:tint="#60000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lineaTres"
            app:shapeAppearanceOverlay="@style/circular"
            app:srcCompat="@drawable/imagen_uno" />

        <TextView
            android:id="@+id/novetatTitol"
            android:layout_width="149dp"
            android:layout_height="59dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/novetatImatge"
            app:layout_constraintEnd_toEndOf="@id/novetatImatge"
            app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintStart_toStartOf="@id/novetatImatge"
            app:layout_constraintTop_toBottomOf="@id/lineaTres"
            app:layout_constraintVertical_bias="0.894" />

        <TextView
            android:id="@+id/novetatData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="124dp"
            android:text="20/05/2024"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/novetatImatge"
            app:layout_constraintEnd_toEndOf="@id/novetatImatge"
            app:layout_constraintHorizontal_bias="0.825"
            app:layout_constraintStart_toEndOf="@id/novetatTitol"
            app:layout_constraintTop_toBottomOf="@id/lineaTres"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/lineaFinal"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:background="#5F574F"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/iniciBotoInici"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="@string/iniciBotoInici"
            android:textColor="#5F574F"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/liniaInici"
            app:layout_constraintEnd_toStartOf="@id/iniciBotoTransport"
            app:layout_constraintHorizontal_bias="0.552"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/novetatImatge"
            app:layout_constraintVertical_bias="0.793" />

        <TextView
            android:id="@+id/iniciBotoTransport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="96dp"
            android:text="@string/iniciBotoTransport"
            android:textColor="#5F574F"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/lineaFinal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/novetatImatge"
            app:layout_constraintVertical_bias="0.027" />

        <View
            android:id="@+id/liniaInici"
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:layout_marginBottom="32dp"
            android:background="#5F574F"
            app:layout_constraintBottom_toTopOf="@id/lineaFinal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.279"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
