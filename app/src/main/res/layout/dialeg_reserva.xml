<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <View
        android:id="@+id/blueBackground"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#5F574F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif"
        android:text="RESERVA"
        android:textAlignment="center"
        android:textColor="@color/marro"
        android:textSize="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blueBackground" />

    <View
        android:id="@+id/blueBackgroundDos"
        android:layout_width="314dp"
        android:layout_height="259dp"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/gris_dos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo" />

    <View
        android:id="@+id/blueBackgroundTres"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="#5F574F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blueBackgroundDos" />

    <TextView
        android:id="@+id/textReserba"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"

        android:text="Per fer la reserva, és necessari iniciar sessió a l'aplicació."
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/blueBackgroundDos"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/blueBackgroundDos"
        app:layout_constraintTop_toTopOf="@+id/blueBackgroundDos" />

    <Button
        android:id="@+id/button"
        android:layout_width="185dp"
        android:layout_height="50dp"
        android:background="@drawable/boto_groc"
        android:text="Iniciar sessió"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/blueBackgroundDos"
        app:layout_constraintEnd_toEndOf="@+id/blueBackgroundDos"
        app:layout_constraintStart_toStartOf="@+id/blueBackgroundDos"
        app:layout_constraintTop_toBottomOf="@+id/textReserba" />

</androidx.constraintlayout.widget.ConstraintLayout>