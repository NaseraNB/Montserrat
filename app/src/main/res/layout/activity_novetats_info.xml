<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".models.models.NovetatsInfo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/blocMarroUn"
            android:layout_width="wrap_content"
            android:layout_height="86dp"
            android:background="#5F574F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/avis"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="#555555"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blocMarroUn" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.07569343" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.02872777" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.12" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.78" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.92" />

        <ImageView
            android:id="@+id/transportMenu"
            android:layout_width="33dp"
            android:layout_height="34dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline41"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.403"
            app:layout_constraintStart_toStartOf="@+id/guideline43"
            app:layout_constraintTop_toTopOf="@+id/guideline40"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/menulogo" />

        <TextView
            android:id="@+id/novetatsTitol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/novetatsTitol"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/guideline41"
            app:layout_constraintEnd_toStartOf="@+id/guideline43"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline39"
            app:layout_constraintTop_toTopOf="@+id/guideline40"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/novetatsAvis"
            android:layout_width="876dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/avis_prova"
            android:drawablePadding="20dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="55dp"
            android:text="@string/rutesAvis"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/avis"
            app:layout_constraintEnd_toEndOf="@+id/avis"
            app:layout_constraintHorizontal_bias="0.104"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blocMarroUn"
            app:layout_constraintVertical_bias="0.357" />

        <TextView
            android:id="@+id/novetatsEscolanía"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/novetatsEscolanía"
            android:textColor="#5F574F"
            android:textSize="23dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guideline44"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline39"
            app:layout_constraintTop_toBottomOf="@+id/avis" />

        <View
            android:id="@+id/lineUn"
            android:layout_width="346dp"
            android:layout_height="3dp"
            android:layout_marginTop="3dp"
            android:background="#5F574F"
            app:layout_constraintEnd_toStartOf="@+id/guideline44"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline39"
            app:layout_constraintTop_toBottomOf="@+id/novetatsEscolanía" />


        <View
            android:id="@+id/info"
            android:layout_width="343dp"
            android:layout_height="140dp"
            android:layout_marginTop="132dp"
            android:background="@drawable/shadows"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.468"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lineUn" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/novetatsImatge"
            android:layout_width="343dp"
            android:layout_height="138dp"
            android:layout_marginTop="12dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:tint="#90000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lineUn"
            app:shapeAppearanceOverlay="@style/radiuse"
            app:srcCompat="@drawable/imagen_dos" />

        <TextView
            android:id="@+id/escolaniaData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="25/05/2024"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/novetatsImatge"
            app:layout_constraintEnd_toEndOf="@+id/novetatsImatge"
            app:layout_constraintHorizontal_bias="0.904"
            app:layout_constraintStart_toStartOf="@+id/novetatsImatge"
            app:layout_constraintTop_toTopOf="@+id/novetatsImatge"
            app:layout_constraintVertical_bias="0.852" />

        <TextView
            android:id="@+id/novetatsText"
            android:layout_width="329dp"
            android:layout_height="103dp"
            android:text=""
            android:textColor="@color/marro"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/info"
            app:layout_constraintEnd_toStartOf="@+id/guideline44"
            app:layout_constraintStart_toStartOf="@+id/guideline39"
            app:layout_constraintTop_toTopOf="@+id/info"
            app:layout_constraintVertical_bias="0.783" />

        <Button
            android:id="@+id/novetatReservaBoto"
            android:layout_width="212dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/boto_groc"
            android:text="@string/novetatsReservarActivitat"
            android:textColor="@color/marro"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info" />

        <View
            android:id="@+id/blocGris"
            android:layout_width="404dp"
            android:layout_height="139dp"
            android:layout_marginTop="36dp"
            android:background="#E1E0DF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/novetatReservaBoto" />

        <TextView
            android:id="@+id/novetatsConsulta"
            android:layout_width="225dp"
            android:layout_height="68dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/novetatsConsulta"
            android:textAlignment="center"
            android:textColor="@color/marro"
            android:textSize="28dp"
            app:layout_constraintBottom_toBottomOf="@+id/blocGris"
            app:layout_constraintEnd_toEndOf="@+id/blocGris"
            app:layout_constraintStart_toStartOf="@+id/blocGris"
            app:layout_constraintTop_toTopOf="@+id/blocGris" />

        <TextView
            android:id="@+id/transportBotoInici"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/transportBotoInici"
            android:textColor="#5F574F"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textView10"
            app:layout_constraintHorizontal_bias="0.56"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blocGris" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/transportBotoTransport"
            android:textColor="#5F574F"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.737"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blocGris" />

        <View
            android:id="@+id/liniaTransport"
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:layout_marginTop="5dp"
            android:background="#5F574F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.268"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/transportBotoInici" />

        <View
            android:id="@+id/lineaFinal"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="#5F574F"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:layout_constraintVertical_bias="0.016" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="149dp"
            android:layout_height="114dp"
            android:layout_marginTop="100dp"
            android:tint="#80000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/liniaTransport"
            app:srcCompat="@drawable/escolaniados" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="180dp"
            android:layout_height="114dp"
            android:layout_marginTop="100dp"
            android:tint="#80000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/liniaTransport"
            app:srcCompat="@drawable/santuarimontserratdos" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="144dp"
            android:layout_height="316dp"
            android:layout_marginTop="57dp"
            android:tint="#80000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blocGris"
            app:srcCompat="@drawable/dos" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="104dp"
            android:layout_height="47dp"
            android:text="@string/novetatsEscolanía"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.418"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.59" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="106dp"
            android:layout_height="47dp"
            android:text="@string/novetatsSantuari"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/lineaFinal"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.437"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintVertical_bias="0.629" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="88dp"
            android:layout_height="43dp"
            android:text="@string/novetatsAmics"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="@+id/imageView7"
            app:layout_constraintTop_toTopOf="@+id/imageView7"
            app:layout_constraintVertical_bias="0.534" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>